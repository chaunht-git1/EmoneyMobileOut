<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <navigation-rule>
        <from-view-id>/pages/root/login.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>#{loginManagerBean.validateUsernamePassword()}</from-outcome>
            <from-outcome>success</from-outcome>
            <redirect/>
            <to-view-id>/pages/root/index.xhtml</to-view-id>
        </navigation-case>
      
    </navigation-rule>
    <navigation-rule> 
        <from-view-id>/pages/root/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>#{hoibaoManagedBean.chuyentrangdshoibao()}</from-outcome>
            <from-outcome>success</from-outcome>
            <redirect/>
            <to-view-id>/pages/chinha/dshoibaomobile.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>#{hoibaoManagedBean.chuyentrangkshoibaochinhanh()}</from-outcome>
            <from-outcome>success1</from-outcome>
            <redirect/>
            <to-view-id>/pages/chinha/kshbthongkenhanvien.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>#{khachhangManagedBean.chuyentrang}</from-outcome>
            <from-outcome>successkh</from-outcome>
            <redirect/>
            <to-view-id>/pages/khachhang/chinhacapnhatthongtin.xhtml</to-view-id>
        </navigation-case>
         <navigation-case>
            <from-outcome>#{loginManagerBean.laythongsohethong()}</from-outcome>
            <from-outcome>info</from-outcome>
            <redirect/>
            <to-view-id>/pages/root/info.xhtml</to-view-id>
        </navigation-case>

    </navigation-rule>
 
    <navigation-rule>
        <from-view-id>/pages/chinha/kshbthongkenhanvien.xhtml</from-view-id>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/pages/khachhang/chinhacapnhatthongtin.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>successctkh</from-outcome>
            <redirect/>
            <to-view-id>/pages/khachhang/chitietkhachhang.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/pages/khachhang/chitietkhachhang.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>backctkh</from-outcome>
            <redirect/>
            <to-view-id>/pages/khachhang/chinhacapnhatthongtin.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
     <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>#{loginManagerBean.logout}</from-outcome>
            <from-outcome>logout</from-outcome>
            <redirect/>
            <to-view-id>/pages/root/login.xhtml</to-view-id>
        </navigation-case>
         <navigation-case>
            <from-outcome>#{loginManagerBean.gohome}</from-outcome>
            <from-outcome>gohome</from-outcome>
            <redirect/>
            <to-view-id>/pages/root/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
